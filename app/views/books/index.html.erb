<h1>Books</h1>

<% @books.each do |book| %>
  <p><strong>Title</strong></p>
  <span><%= link_to book.title, book_path(book.id) %></span>

  <p><strong>Body</strong></p>
  <span><%= link_to book.body, book_path(book.id) %></span>
  <%= link_to "Show", books_show_path(@book.id) %>
  <%= link_to "Edit", books_edit_path(@book.id) %>
  <%= link_to "Destroy", books_show_path(@book.id) %>

<% end %>

<h2>New book</h2>
<%= form_with model: @book do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>

  <p>Body</p>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>