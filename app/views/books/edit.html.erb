<h1>Editing Book</h1>

<%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>

  <P>Title</P>
  <%= f.text_field :book %>

  <p>Body</p>
  <%= f.text_area :body %>

  <%= f.submit 'Update Book' %>
  
  <p><a href="/show">Show</a></p><p> | </p><p><a href="/show">Back</a></p>

<% end %>